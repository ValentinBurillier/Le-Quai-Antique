{% extends 'base.html.twig' %}

{% block title %}Entrées - Le Quai Antique{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('assets/css/pages/entrees.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}

    {% block modalHeader %} 
        {% include ('global/modals/modalHeader.html.twig') %} 
    {% endblock %}

    <main> 
        <section class="main__img">

            <div class="main__container">
                <h2 class="entree__title2">Entrées</h2>
                {% for entree in entrees %}
                    <p class="entree__paragraphe title">{{ entree.title }}</p>
                    <p class="entree__paragraphe description">{{ entree.description }}</p>
                    <p class="entree__paragraphe price">{{ entree.price }}€</p>
                {% endfor %}
            </div>
            <a href="#" class="arrow_linkRight"><img src="{{ asset('assets/images/chevron_droit.png')}}" alt="flèche droite"></a>
            <div class="div__button">
                <button type="button" class="button">Valider</button>
            </div>
        </section>
        
    </main>

    {# IMPORTATION DU FOOTER #}
    {% block modalFooter %}
        {% include ('global/modals/modalFooter.html.twig') %}
    {% endblock %}
    {# FIN IMPORTATION #}

{% endblock %}