{% extends 'global/modals/modalMenu.html.twig' %}
{% block title %}Vins - Le Quai Antique{% endblock %}
{% block stylesheets %}
  <link href="{{ asset('assets/css/pages/vins.css')}}" rel="stylesheet" type="text/css">
{% endblock %}
{% block Menu %}
<main> 
        <section class="main__img">

            <div class="main__container">
                <h2 class="entree__title2">Nos Vins</h2>
                {% for item in items %}
                    <p class="entree__paragraphe title">{{ item.category }}</p>
                    <p class="entree__paragraphe description">{{ item.title }}</p>
                    <p class="entree__paragraphe price14">{{ item.price14 }}€</p>
                    <p class="entree__paragraphe price75">{{ item.price75 }}€</p>
       
                {% endfor %}
            </div>
            <a href="#" class="arrow_linkLeft"><img src="{{ asset('assets/images/chevron_gauche.png')}}" alt="flèche gauche"></a>
            <a href="#" class="arrow_linkRight"><img src="{{ asset('assets/images/chevron_droit.png')}}" alt="flèche droite"></a>
            <div class="div__button">
                <button type="button" class="button">Réservez</button>
            </div>

            {# DISPLAY WIDTH >=1350px #}
            <p class="reserved">Réservez votre table dès maintenant</p>
        </section>
        
</main>
{% endblock %}