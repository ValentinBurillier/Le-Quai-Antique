{% extends 'base.html.twig' %}

{% block title %}Détails réservation - Le Quai Antique{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('assets/css/pages/detailsReservation.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}

    {% block modalHeader %} 
        {% include ('global/modals/modalHeader.html.twig') %} 
    {% endblock %}
    <main class="main">
        <section class="main__container">
            <div class="section__topContainer">
                <h2 class="topContainer__title2 title2">Nombre de personnes</h2>
                <input type="number" class="input__number input" id="number" value="2">
            </div>
            <div class="section__bottomContainer">
                <h2 class="bottomContainer__title2 title2">Allergies vous concernant et votre / vos convive(s)</h2>
                <input type="text" class="input__textArea input" id="allergy">
            </div>
            {# BUTTON IMPORTATION #}
            {% block button %}
            {% set textbtn = 'Continuer' %}
              {% include ('global/modals/modalButton.html.twig') %}
            {% endblock %}
        </section>
    </main>
    {# IMPORTATION DU FOOTER #}
    {% block modalFooter %}
        {% include ('global/modals/modalFooter.html.twig') %}
    {% endblock %}
    {# FIN IMPORTATION #}

<script src="{{ asset('assets/js/details_reservation.js')}}"></script>
{% endblock %}