{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block stylesheets %}
  <link href="{{ asset('assets/css/pages/inscription.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
    {% block modalHeader %} 
        {% include ('global/modals/modalHeader.html.twig') %} 
    {% endblock %}
    
    <main class="main">
        {{ form_start(registrationForm) }}
        <h2>Inscription</h2>
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="button">Valider</button>
        {{ form_end(registrationForm) }}
    </main>

    {# IMPORTATION DU FOOTER #}
    {% block modalFooter %}
        {% include ('global/modals/modalFooter.html.twig') %}
    {% endblock %}
    {# FIN IMPORTATION #}
{% endblock %}
