<!DOCTYPE html>
<html lang="fr-Fr">
{# HEAD PART #}
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% block title %}
  <title>Connection - Le Quai Antique</title>
{% endblock %}
{% block stylesheets %}
  <link href="{{ asset('assets/css/pages/confirmBooking.css')}}" rel="stylesheet" type="text/css">
{% endblock %}
</head>

{# BODY PART #}
{% block body %}
<body>
    {# IMPORTATION DU HEADER #}
    {% block modalHeader %}
        {% include ('global/modals/modalHeader.html.twig') %}
    {% endblock %}
    {# FIN IMPORTATION #}
    {# START MAIN#}
    <main>
      {# ESPACE FORMULAIRE #}
      {{ form_start(form) }}
        <h2 class="form__title2">Confirmer la r√©servation</h2>
        {{ form_widget(form.lastName, {'attr': {'class': 'form__input'}}) }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form_input'}}) }}
        {{ form_widget(form.phonenumber, {'attr': {'class': 'form_input'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form_input'}}) }}
        <button class="button" type="submit">Valider</button>
      {{ form_end(form) }}
    </main>
    {# END MAIN #}

    {# IMPORTATION DU FOOTER #}
    {% block modalFooter %}
        {% include ('global/modals/modalFooter.html.twig') %}
    {% endblock %}
    {# FIN IMPORTATION #}

{% endblock %}
</body>
</html>